			 		<label id="label_ja" class="btn btn-info active">
			 			<input type="radio">Japanese
			 		</label>
	 			</div>
	 			<button id="btn_continuous" class="btn btn-default btn_continuous" data-toggle="button">Continuous</button>
 			</div>
 			<br>
 			<div class="col-md-4">
 				<button id="btn_start" ype="button" class="btn btn-primary btn-lg">Start Talking</button>
 				<button id="btn_stop" ype="button" class="btn btn-danger btn-lg">Stop</button>
 			</div>
	 	</div>

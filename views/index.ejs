	 	<div class="container">
	 		<div class="row">
	 			<textarea id="textarea_recog" class="form-control" rows=15 readonly></textarea>
	 		</div>
	 	</div>
	 	<br>
	 	<div class="container">
	 		<div class="row">
	 			<textarea id="textarea_status" class="form-control" rows=5 readonly></textarea>
	 		</div>
	 	</div>
	 	<br>
	 	<div class="container">
 			<div class="col-md-8">
